extends layout

block content
  header.welcome
    h1.text-center 
      | Hi, you've reached Bakker Labs.
      br
      |How may I help you?
    
  .wrapper
    .container
      .row
        .col-md-10.col-md-offset-1.box
        
          form.form-inline
            .form-group
              p Hi, my name is &nbsp;
              input.form-control#firstName(type="text" placeholder="John Degenkolb")
