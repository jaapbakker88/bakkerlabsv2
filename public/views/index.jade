extends layout

block content
  header.welcome
    h1.text-center 
      | Hi, you've reached Bakker Labs.
      br
      |How may I help you?
    
  #contact-wrapper
    .container
      .row
        .col-md-10.col-md-offset-1.box
          
        
          if locals.success
            div(class=alert)
              p <strong>FLASH!</strong> #{success}      
          else
            form.form-inline(action="/", method="POST")
              .form-group
                p Hi, my name is &nbsp;
                input.form-control#firstName(type="text" name="name" placeholder="John Degenkolb")
                p . I'm looking for someone to help me with 
                select.form-control#projectType(name="projectType")
                  option(value="" disabled selected) project type
                  option(value="webdesign") Webdesign
                  option(value="consultation") Consultation
                  option(value="squarespace") Squarespace
                p . Here's a short 
                textarea.form-control#description(name="description" rows="1" cols="50" placeholder="description")
                p &nbsp; of what I have in mind. My budget is around &nbsp;
                .input-group
                  .input-group-addon â‚¬
                  input.form-control#budget(type="text" name="budget" placeholder="10.000" size="7")
                  .input-group-addon ,-
                p . You can reach  me at &nbsp;
                  input.form-control#email(type="text" name="email" placeholder="myemail@example.com")
                p .
              button.btn.btn-primary.center-block Submit enquiry
  .container.information
    .row
      .col-md-8
        #map
        
      .col-md-4.contact-details
        h4 Get in touch
        p Please don't hestitate contacting me at: #[a(href="mailto:hello@bakkerlabs.nl") hello@bakkerlabs.nl]. 
          | I'll be happy to schedule a meeting or help you with any questions you might have.
          br
          .s-grid
            .fifth
              p &nbsp;
            .fifth
              a(href="https://twitter.com/bakkerlabs")
                i.fa.fa-twitter &nbsp;
            .fifth
              a(href="https://facebook.com/bakker.labs")
                i.fa.fa-facebook &nbsp;
            .fifth
              a(href="https://instagram.com/bakkerlabs")
                i.fa.fa-instagram &nbsp;
  .footer
    .container
      .row.footer
        hr
        p
          small &copy; Bakker Labs 2015-2016. All rights reserved. 
          
